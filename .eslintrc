{
    "extends": [
        "react-app",
        "airbnb",
        "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
        "jsx-a11y"
    ],
    "rules": {
        "semi": 1,
        // Indent with 4 spaces
        "indent": [
            "error",
            4
        ],
        // Indent JSX with 4 spaces
        "react/jsx-indent": [
            "error",
            4
        ],
        // Indent props with 4 spaces
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/forbid-prop-types": 0
    }
}